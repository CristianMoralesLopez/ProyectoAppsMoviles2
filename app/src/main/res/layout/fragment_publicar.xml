<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_publicar">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ingrese el título del proyecto:"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:background="@drawable/forma_edit_text"
                android:hint="Ingrese el titulo del proyecto aqui"
                android:padding="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Descripción:"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"/>


            <EditText
                android:id="@+id/et_descripcion"
                android:layout_width="320dp"
                android:layout_height="120dp"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:background="@drawable/forma_edit_text"
                android:inputType="textMultiLine"
                android:scrollbars="vertical" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Caracteristicas:"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_caracteristicas"
                android:layout_width="320dp"
                android:layout_height="120dp"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:background="@drawable/forma_edit_text"
                android:inputType="textMultiLine"
                android:scrollbars="vertical" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imagen primaria:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_agregarfotoPrim"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:background="@drawable/forma_boton_3"
                android:text="+" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:text="Imagen secundaria: "
                android:textColor="#000"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_agregarfotoSec"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:background="@drawable/forma_boton_3"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_fotoP"
                android:layout_width="120dp"
                android:layout_height="120dp" />

            <ImageView
                android:id="@+id/img_fotoS"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="59dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha:"
                android:layout_marginRight="10dp"
                android:background="@drawable/forma_boton_3"
                android:textColor="#000"
                android:id="@+id/btnFechaProyecto"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="fecha"
                android:textSize="18sp"
                android:textColor="#000000"
                android:id="@+id/txtFecha"/>






        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto requerido:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/et_monto"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="55dp"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Método de inversión:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/spin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp">

            </Spinner>
        </LinearLayout>

        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Guardar proyecto"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/forma_boton2"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

</ScrollView>

