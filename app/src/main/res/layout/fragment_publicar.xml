<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ingrese el título del proyecto:"
                android:textColor="#000"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="ingrese el titulo del proyecto aqui" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Descripcion:"
                android:textColor="#000"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/et_descripcion"
                android:layout_width="320dp"
                android:layout_height="120dp"
                android:inputType="textMultiLine"
                android:scrollbars="vertical" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Caracteristicas:"
                android:textColor="#000"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_caracteristicas"
                android:layout_width="320dp"
                android:layout_height="120dp"
                android:inputType="textMultiLine"
                android:scrollbars="vertical" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Imagen primaria:"
                android:textColor="#000"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_agregarfotoPrim"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:text="+" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:text="Imagen secundaria:"
                android:textColor="#000"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_agregarfotoSec"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/img_fotoP"
                android:layout_width="120dp"
                android:layout_height="120dp" />

            <ImageView
                android:id="@+id/img_fotoS"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="59dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha:"
                android:textColor="#000"
                android:id="@+id/btnFechaProyecto"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="fecha"
                android:id="@+id/txtFecha"/>






        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Monto requerido:"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/et_monto"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="55dp"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Método de inversión:"
                android:textColor="#000"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/spin"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp">

            </Spinner>
        </LinearLayout>

        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Guardar proyecto"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

</ScrollView>

