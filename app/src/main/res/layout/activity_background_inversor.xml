<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:id="@+id/drawerInversor"
    android:background="@color/colorBlanco">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar_inversor"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frame_inversor"
            android:layout_below="@+id/toolbar_inversor"/>



    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view_inversor"
        app:headerLayout="@layout/cabecera"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorBlanco"
        app:itemTextColor="@color/colorPrimaryDark"
        app:itemIconTint="@color/colorPrimaryDark"
        app:menu="@menu/drawer_menu_inversor"
        android:layout_gravity="start"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>