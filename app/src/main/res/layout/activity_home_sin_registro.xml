<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:hint="busqueda"
            android:textColorHint="@color/colorPrimaryDark"
            android:id="@+id/txtBusquedaSinRegistro" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search"
            android:id="@+id/btnBusquedaSinRegistrar"/>



    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="475dp"
        android:id="@+id/listaSinRegistrar"></ListView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegistrarseEmprendedor"
            android:text="Publica tu Proyecto"/>

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegistrarseInversor"
            android:text="Invierte"/>
        
    </LinearLayout>

</LinearLayout>